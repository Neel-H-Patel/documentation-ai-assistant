{
  "name": "documentation-ai-tutor",
  "displayName": "Documentation AI Tutor",
  "description": "A VS Code extension to explain code, give code examples, and provide documentation links using OpenAI Assistant",
  "version": "1.0.0",
  "publisher": "SMUCoderClan",
  "repository": {
    "type": "git",
    "url": "https://github.com/Neel-H-Patel/documentation-ai-assistant.git"
  },
  "contributors": [
    {
      "name": "Neel Patel",
      "email": "neel.hpatel@outlook.com",
      "url": "https://www.linkedin.com/in/neel-h-patel1/"
    },
    {
      "name": "Manny Garcia",
      "email": "mannygrealestate@gmail.com",
      "url": "https://www.linkedin.com/in/mannygarciap/"
    },
    {
      "name": "Max Link",
      "email": "mdlink@smu.edu",
      "url": "https://www.linkedin.com/in/max-link/"
    }
  ],
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:documentation-ai-tutor.showSelectedCode",
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "documentation-ai-tutor.showSelectedCode",
        "title": "Explain Selected Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "documentation-ai-tutor.showSelectedCode",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint src --ext js",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@types/vscode": "^1.92.0",
    "@vscode/test-electron": "^2.4.1",
    "babel-loader": "^9.1.3",
    "eslint": "^8.57.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "openai": "^4.58.1"
  }
}
